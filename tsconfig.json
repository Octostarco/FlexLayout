{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES6",
        "stripInternal": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "skipLibCheck": true,
        "types": [
            "node",
        ],
        "lib": [
          "es6",
          "webworker",
          "dom",
          "ESNext",
          "scripthost"
        ]
    },
    "include": ["./src/**/*", "./examples/demo/*"]
}
